#!/usr/bin/env bash
set -eux

# prepare
jupyter lab clean --all

# python setup
python -m pip install -e . --no-cache-dir --no-deps

# lab
jupyter labextension list
jupyter labextension install $(cat labextensions.txt) --no-build --debug
jupyter labextension list
jupyter lab build --debug --dev-build=False --minimize=True \
    || echo "TODO: REMOVE. Lab build failed, continuing anyway... check /tmp for logs"
jupyter labextension list

# cleanup
jupyter lab clean
jlpm cache clean

# see what we have
jupyter labextension list
jupyter serverextension list
